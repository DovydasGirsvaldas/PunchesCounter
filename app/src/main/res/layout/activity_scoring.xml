<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dovydas.punchescounter.ScoringActivity"
    android:orientation="vertical"
    android:background="@drawable/canvas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/redFighter"
            android:text="Floyd"
            android:layout_weight="1"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginRight="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blueFighter"
            android:text="Manny"
            android:layout_weight="1"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/redPunches"
                android:text="0"
                android:textStyle="bold"
                android:textSize="32dp"
                android:textIsSelectable="true"
                android:layout_gravity="center"
                android:textColor="#000000" />
            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/btnMinusRed"
                android:background="@drawable/down_button"
                android:layout_gravity="top|center" />
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEndRound"
            android:background="@drawable/end_round"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bluePunches"
                android:text="0"
                android:textSize="32dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#000000" />
            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/btnMinusBlue"
                android:background="@drawable/down_button"
                android:layout_gravity="top|center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/scoreForRed"
            android:background="@drawable/red_square"
            android:layout_weight="1"
            android:layout_gravity="top" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/scoreForBlue"
            android:background="@drawable/blue_square"
            android:layout_weight="1"
            android:layout_gravity="top" />
    </LinearLayout>
</LinearLayout>
